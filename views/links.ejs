<%- include('./partials/header')%>
<%- include('./partials/navbar')%>
<div class="container">
  <div class="card mt-5">
    <div class="card-header bg-dark text-white d-flex justify-content-center">
      <i data-toggle="modal" data-target="#exampleModal" class="icon-add-link far fa-plus"></i> <strong>Seus Links Salvos</strong>
    </div>
    <div class="card-body d-flex flex-column">
      <div class="links w-100 bg-dark d-flex">
        <div class="title">
          Titulo
        </div>
        <div class="link">
          Link
        </div>
        <div class="actions">
          Ações
        </div>
    </div>
    <% links.forEach(links => { %>
    <div class="links w-100 bg-dark d-flex">

      <div class="title">
        <%= links.titulo %>   
      </div>

      <div id="<%= links.id %>" onclick="copyToClipboard('#<%= links.id %>'), changeTitle('#<%= links.id %>')" data-toggle="tooltip" data-placement="top" title="Clique para copiar o link" class="link"> 
        <%= links.link %>        
      </div>  
      <div class="actions">
        <form method="GET" action="/remove-link/<%= links.id %>" onsubmit="ConfirDelete(event, this)">
        <button type="submit" class="ml-1 btn btn-danger">Apagar</button>
      </form>
      </div>
    </div>
    <% }) %>
    </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title" id="exampleModalLabel">Adicionar um Link</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/add-link" method="POST">
        <input type="text" class="mb-2 form-control" placeholder="Titulo" name="title">
        <input type="text" class="form-control" placeholder="Link" name="link">
        <input type="hidden" class="form-control" name="id">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        <button type="submit" class="btn btn-success">Adicionar</button>
      </div>
    </form>
    </div>
  </div>
</div>
<script>
  function copyToClipboard(element) {
  var $temp = $("<input>");
  $("body").append($temp);
  $temp.val($(element).text()).select();
  $(element).addClass('copiado');
  setTimeout(function(){
    $(element).removeClass('copiado');
  }, 300)
  document.execCommand("copy");
  $temp.remove();
}

function changeTitle(id){
  $(this).remove()
}
</script>

<script>
  function ConfirDelete(event, form){
      event.preventDefault();
      Swal.fire({
          title: 'A você tem certeza?',
          text: "Você não poderá reverter isso!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Sim, delete esse link!'
          }).then((result) => {
          if (result.value) {
              Swal.fire(
              'Deletado!',
              'Esse link foi deletado com sucesso!',
              'success'
              );
              
              setTimeout(function(){
                  form.submit();
              }, 1300)
              
          }
      })
  }

</script>
<%- include('./partials/footer')%>